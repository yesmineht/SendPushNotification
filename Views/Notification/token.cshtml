<a href="#" type="button" class="btn btn-primary" data-toggle="modal" data-id="60" data-target="#exampleModal">
    SEND TOKEN
</a>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">TOKEN</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label for="token"><b>token</b></label>
                <input type="text" placeholder="Enter your token" name="token" id="token" required>
                <input type="text" name="hiddenValue" id="hiddenValue" value="" hidden />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    close
                </button>
                <button class="btn btn-primary"
                        type="submit" value="send" onclick="send_token()">
                    send
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $(".btn btn-primary").click(function () {
            var my_id_value = $(this).data('id');
            $(".modal-body #hiddenValue").val(my_id_value);
        })
    });
    function send_token() {

        var token = document.getElementById("token").value;
        var ID = document.getElementById("hiddenValue").value;
        $.ajax({


            url: "/Notif/SendPush",
            type: "POST",
            data: { 'id': ID, 'token': token }
        });
    }

</script>


